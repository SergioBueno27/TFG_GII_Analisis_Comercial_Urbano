<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<link rel="icon" href="{{ asset('/icon/favicon.ico') }}"/>
		<title>
			{% block title %}Análisis Comercial Urbano
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('/css/main.css') }}">
			<script src="{{ asset('ag-grid-community/dist/ag-grid-community.min.noStyle.js') }}"></script>
			<script src="{{ asset('chart.js/Chart.bundle.min.js') }}"></script>
		{% endblock %}
	</head>
	{% block body %}
		<body>
			<!-- Tener en cuenta que el valor inicial de código postal habrá que cambiarlo en caso de ser necesario -->
			{% set baseZipcode = 28001 %}
			{% set baseCategory = 'es_auto' %}
			{% set baseDate = '201501' %}
			{% set baseDay = 'monday' %}
			<div class="main">
				{% block header %}
					<div id="header">
						<div id="titulo">
							{% block linkHeader %}
							<h1>
								<a href="{{path('home')}}">
									<span class="mdi mdi-finance">Análisis comercial urbano</span>
								</a>
							</h1>
							{% endblock %}
						</div>
						<div class="flex_derecha_arriba">
							Usuario:
							{{ app.user.username }},

							<a id="exit" title="Exit" href="{{ path('app_logout') }}" class="mdi mdi-exit-run"></a>
						</div>
						
						<div id="menu">
							<div class="flex_menu">
								{% if app.user %}
										{% if is_granted('ROLE_ADMIN') %}
											<a class="mdi mdi-database-plus" href="{{path('admin')}}">Extraer y subir a base de datos</a>
										{% endif %}
								{% endif %}
								
								<a href="{{ path('chart_basic_data_zipcode', {'zipcode': baseZipcode}) }}">Datos básicos</a>
								<a href="{{ path('chart_category_data_zipcode', {'zipcode': baseZipcode,'category_code': baseCategory}) }}">Datos por categoría</a>
								<a href="{{ path('chart_day_data_zipcode', {'zipcode': baseZipcode,'date': baseDate}) }}">Datos por día</a>
								<a href="{{ path('chart_hour_data_zipcode', {'zipcode': baseZipcode,'date': baseDate,'day': baseDay}) }}">Datos por hora</a>
								<a href="{{ path('chart_destination_data_zipcode', {'zipcode': baseZipcode,'date': baseDate}) }}">Datos por destino</a>
								<a href="{{ path('chart_origin_data_zipcode', {'zipcode': baseZipcode,'date': baseDate}) }}">Datos por origen</a>
								<a href="{{ path('chart_origin_age_data_zipcode', {'zipcode': baseZipcode,'date': baseDate}) }}">Datos por origen y edad</a>
								<a href="{{ path('chart_origin_gender_data_zipcode', {'zipcode': baseZipcode,'date': baseDate}) }}">Datos por origen y género</a>
							</div>
						</div>
					{% endblock %}
					{% block afterMenu %}<h4>
						<a href="javascript: history.go(-1)">
							<span class="mdi mdi-arrow-left">Atrás</span>
						</a>
					</h4>
					{% endblock %}
				</div>
			{% endblock %}
			{% block containers %}{% endblock %}
			{% block javascript %}

			{% endblock %}
		</body>
	</body>
</html></div>
