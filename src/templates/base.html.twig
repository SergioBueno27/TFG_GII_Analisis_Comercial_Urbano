<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<link rel="icon" href="{{ asset('/icon/favicon.ico') }}"/>
		<title>
			{% block title %}Análisis Comercial Urbano
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('/css/main.css') }}">
			<script src="{{ asset('ag-grid-community/dist/ag-grid-community.min.noStyle.js') }}"></script>
		{% endblock %}
	</head>
	{% block body %}
		<body>
			<div class="main">
				{% block header %}
					<div id="header">
						<div id="titulo">
							{% block linkHeader %}
							<h1>
								<a href="{{path('home')}}">
									<span class="mdi mdi-finance">Análisis comercial urbano</span>
								</a>
							</h1>
							{% endblock %}
						</div>
						<div class="flex_derecha_arriba">
							Usuario:
							{{ app.user.username }},

							<a id="exit" title="Exit" href="{{ path('app_logout') }}" class="mdi mdi-exit-run"></a>
						</div>

						<div id="menu">
							<nav>
								<ul>
									<ul>
										<h3 id="nombreMenu">
											Menú Principal</h3>
									</ul>
									{% if app.user %}
										{% if is_granted('ROLE_ADMIN') %}
											<ul>
												<a href="{{path('admin')}}">
													<li>
														<button class="mdi mdi-database-plus">Extraer y subir a base de datos</button>
													</li>
												</a>
											</ul>
										{% endif %}
									{% endif %}
									<ul>
										<a href="{{ path('basic_data_zipcode', {'zipcode': 28001}) }}">
											<li>
												<button>Datos básicos</button>
											</li>
										</a>
									</ul>
									<ul>
										<a href="{{ path('category_data_zipcode', {'zipcode': 28001}) }}">
											<li>
												<button>Datos por categoría</button>
											</li>
										</a>
									</ul>
									<ul>
										<a href="{{ path('category_data_zipcode', {'zipcode': 28001}) }}">
											<li>
												<button>Datos por categoría</button>
											</li>
										</a>
									</ul>
								</ul>
							</nav>
						</div>
					{% endblock %}
					{% block afterMenu %}{% endblock %}

					{% block javascripts %}{% endblock %}
				</div>
			{% endblock %}
			{% block containers %}{% endblock %}
		</body>
	</body>
</html></div>
